FROM node:18-alpine

WORKDIR /app

# 複製package.json並安裝依賴
COPY frontend/package*.json ./
RUN npm install

# 複製前端程式碼
COPY frontend/ .

# 設定API URL環境變數（在Railway中會自動設定）
ARG VITE_API_BASE_URL
ENV VITE_API_BASE_URL=$VITE_API_BASE_URL

# 建置應用
RUN npm run build

# 使用nginx提供靜態檔案
FROM nginx:alpine

# 複製建置好的檔案到nginx
COPY --from=0 /app/dist /usr/share/nginx/html

# 複製nginx配置
COPY nginx.conf /etc/nginx/nginx.conf

EXPOSE 80

CMD ["nginx", "-g", "daemon off;"]